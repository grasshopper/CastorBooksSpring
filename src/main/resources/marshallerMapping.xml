<?xml version="1.0"?>

<mapping>
	<description>mapping a ImprovedBook object to an XML file</description>

	<!-- mapping for class 'ImprovedBook' -->
	<class name="com.coolisland.castor.helloworld.books.ImprovedBook">

		<!-- bean id from app-context.xml -->
		<map-to xml="bookExample" />

		<field name="ISBN" type="string">
			<bind-xml name="ISBN" node="element" />
		</field>

		<field name="title" type="string">
			<bind-xml name="title" node="element" />
		</field>
<!-- 
		<field name="author" type="string">
			<bind-xml name="authors" node="element" />
		</field>
 -->
	</class>
</mapping>